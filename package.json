{
    "name": "freerstore",
    "version": "0.1.0",
    "main": "src/index.ts",
    "author": "Jacob Weisenburger",
    "license": "MIT",
    "type": "module",
    "npm": "https://www.npmjs.com/package/freerstore",
    "repository": "https://github.com/JacobWeisenburger/freerstore",
    "homepage": "https://github.com/JacobWeisenburger/freerstore",
    "keywords": [
        "firestore",
        "firebase",
        "zod",
        "typescript"
    ],
    "scripts": {
        "start.dev": "node --no-warnings -r ./src/initLocalStorage/index.cjs --loader ts-node/esm --es-module-specifier-resolution=node dev",
        "dev": "nodemon",
        "dev.cmd": "start cmd /k npm run dev",
        "firebase:emulators": "firebase emulators:start --only firestore",
        "firebase:emulators.cmd": "start cmd /k npm run firebase:emulators",
        "test": "jest --watch --config=./jest.config.json --detectOpenHandles freerstore.test.ts",
        "test.cmd": "start cmd /k npm run test"
    },
    "nodemonConfig": {
        "watch": [
            "./"
        ],
        "ignore": [
            "./tmp"
        ],
        "ext": "",
        "exec": "cls && npm run start.dev"
    },
    "peerDependencies": {
        "firebase": "^9.19.1",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@anatine/zod-mock": "^3.10.0",
        "@faker-js/faker": "^7.6.0",
        "@types/jest": "^29.5.1",
        "@types/node-localstorage": "^1.3.0",
        "fake-indexeddb": "^4.0.1",
        "jest": "^29.5.0",
        "node-localstorage": "^2.2.1",
        "nodemon": "^2.0.22",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1"
    },
    "dependencies": {
        "localforage": "^1.10.0"
    }
}